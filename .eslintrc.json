{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "standard",
	"globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
	"parserOptions": {
		"ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "one-var": ["off"],
        "array-bracket-spacing": ["error", "never"],
        "space-before-function-paren": ["error", "never"],
        "quotes": ["off"]
    }
}